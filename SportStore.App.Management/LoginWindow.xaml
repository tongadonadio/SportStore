<Window x:Class="SportStore.App.Management.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportStore.App.Management"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Stretch" Margin="32" VerticalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Stretch" Height="23" Margin="8,8,8,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
            <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Stretch" Height="23" Margin="8" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
            <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="8" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
